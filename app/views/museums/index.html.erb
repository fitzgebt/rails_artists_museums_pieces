<h1>List of Museums</h1>

  <% @museums.each do |museum| %>

    <strong>Name</strong><%= museum.name %>
    <strong>Location</strong><%= museum.location %>
    <strong>Pieces in Collection</strong><%= museum.pieces.count %>
    <%= link_to "View #{museum.name}", museum_path(museum) %>

  <%end%>

  <br>

  <% if @artist %>
  <p>
    <%= link_to "Back to profile", artist_path(@artist), {:class => "btn btn-primary"} %>
  </p>
<% else %>
  <p><%= link_to 'New Museum', new_museum_path %></p>
<% end %>